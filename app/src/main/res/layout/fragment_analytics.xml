<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AnalyticsFragment">

<!--    &lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="Hello analystic fragment"-->
<!--        android:textColor="@color/white"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/deskripsi_konten_di_dalam_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/AnalyticsIPEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_edittext"
                    android:fontFamily="@font/playpensans"
                    android:hint="@string/masukkan_ip_laptop"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintedittext"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry,VisualLintTextFieldSize" />

                <ImageButton
                    android:id="@+id/AnalyticsBtnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:src="@drawable/connect"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/AnalyticsConnectionInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connection_info"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/playpensans"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cpu_usage"
                    android:layout_weight="1"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultCpuUsageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/memory_usage"
                    android:layout_weight="1"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultMemoryUsageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/disk_usage"
                    android:layout_weight="1"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultDiskUsageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/baterai_info"
                    android:layout_weight="1"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultBateraiInfoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/baterai_healt"
                    android:layout_weight="1"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultBateraiHealtTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/network_info"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultNetworkInfoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_info"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/AnalyticsResultSystemInfoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Null"
                    android:fontFamily="@font/playpensans"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <Button
                android:id="@+id/AnalyticsBtnSave"
                android:layout_width="218dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/playpensans"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>